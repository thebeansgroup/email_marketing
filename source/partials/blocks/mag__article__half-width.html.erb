<table class="row">
<% 4.times do |row| %>
  <tr>
    <% 2.times do |n| %>
      <td class="wrapper <%= n == 1 ? "last" : "" %>">
        <table class="six columns">
          <tr>
            <td class="<%= n == 0 ? "left" : "right" %>-text-pad">
              
                <!-- Deal block  -->

                <a href="#link"><img width="270" height="152" src="http://placehold.it/640x360" class="center"></a>
                <div style="border: 1px solid #ddd; padding: 10px;">
                  <a href="#link">
                    <h3>10 microwave recipes for when hot food needs to happen</h3>
                    <p>I was sick in your handbag but shh don't tell anyone.</p>
                  </a>
                  <table class="row">
                    <tr>
                      <td class="four sub-columns">
                        <a href="#facebook-link"><img src="<%= image_url "global/mag__article__fb.jpg" %>" ></a>
                      </td>

                      <td class="eight sub-columns last txt-right">
                        <small>IN <a href="#category-link" class="strong">CATEGORY NAME</a></small>
                      </td>
                      <td class="expander"></td>
                    </tr>
                  </table>
                </div>
                <!-- / Deal block  -->
              

            </td>
            <td class="expander"></td>
          </tr>
        </table>
      </td>
    <% end %>
  </tr>
<% end %>
</table>
