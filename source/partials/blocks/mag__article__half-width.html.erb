<table class="row">
<% 4.times do |row| %>
  <tr>
    <% 2.times do |n| %>
      <td class="wrapper <%= n == 1 ? "last" : "" %>">
        <table class="six columns">
          <tr>
            <td class="<%= n == 0 ? "left" : "right" %>-text-pad">
              
                <!-- Deal block  -->

                <img width="270" height="135" src="http://placehold.it/640x320" class="center">
                <div style="border: 1px solid #ddd; padding: 10px;">
                  <h3>10 microwave recipes for when hot food needs to happen</h3>
                  <p>I was sick in your handbag but shh don't tell anyone.</p>
                  <table class="row">
                    <tr>
                      <td class="six sub-columns">
                        <img src="<%= image_path "mag__article__fb.jpg" %>" >
                      </td>

                      <td class="six sub-columns last txt-right">
                        <small>IN <a href="#">CATEGORY NAME</a></small>
                      </td>
                      <td class="expander"></td>
                    </tr>
                  </table>
                </div>
                <!-- / Deal block  -->
              

            </td>
            <td class="expander"></td>
          </tr>
        </table>
      </td>
    <% end %>
  </tr>
<% end %>
</table>
